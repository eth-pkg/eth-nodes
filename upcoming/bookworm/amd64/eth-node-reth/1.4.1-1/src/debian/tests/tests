#!/usr/bin/env sh

exec 2>&1

set -e

test_binary_in_path() {
	output="$(which reth)"
	assertEquals "/usr/bin/reth" "$output"
}

test_invocation() {
	output="$(reth --version)"
	echo "$output"
	# checked against https://github.com/paradigmxyz/reth/releases/download/v0.2.0-beta.8/reth-v0.2.0-beta.8-x86_64-unknown-linux-gnu.tar.gz
	assertEquals "$output" "reth Version: 1.4.1
Commit SHA: e6ce41ebba0d8752cef9ed885aae057e09226d05
Build Timestamp: 2025-05-16T12:52Z
Build Features: jemalloc
Build Profile: maxperf"
}

. shunit2

